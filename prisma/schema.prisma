// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String      @id @default(cuid())
  name        String
  email       String      @unique
  password    String
  age         Int
  sex         String
  address     String
  phone       String
  education   String
  experience  String
  resume      String?
  portfolio   String?
  projects    Project[]
  applications Application[]
  createdAt   DateTime    @default(now())
}

model Project {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  title       String
  description String
  technologies Json       // store array of strings as JSON
  githubUrl   String?
  liveUrl     String?
  image       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  applicationProjects ApplicationProject[]
}

model JobOffer {
  id             String   @id @default(cuid())
  title          String
  description    String
  company        String?
  budget         Float?
  deadline       DateTime?
  skillsRequired Json       // store array of strings as JSON
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  applications   Application[]
}


model Application {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  jobOffer    JobOffer     @relation(fields: [jobOfferId], references: [id])
  jobOfferId  String
  coverLetter String
  status      String       @default("pending")
  submittedAt DateTime     @default(now())

  applicationProjects ApplicationProject[]
}

model ApplicationProject {
  id            String       @id @default(cuid())
  application   Application  @relation(fields: [applicationId], references: [id])
  applicationId String
  project       Project      @relation(fields: [projectId], references: [id])
  projectId     String

  @@unique([applicationId, projectId]) // ensures unique pair
}
