datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  password     String
  age          Int
  sex          String
  address      String
  phone        String
  education    String?
  experience   String?
  resume       String?
  portfolio    String?
  projects     Project[]
  applications Application[]  // ðŸ‘ˆ A user can submit many applications
  createdAt    DateTime       @default(now())
}

model Project {
  id           String         @id @default(cuid())
  user         User           @relation(fields: [userId], references: [id])
  userId       String
  title        String
  description  String
  image        String?
  applications Application[]  // ðŸ‘ˆ A project can receive many applications
  createdAt    DateTime       @default(now())
}

model Application {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String
  coverLetter   String   // generated or user-provided content
  status        String   @default("pending") // "pending" | "accepted" | "rejected"
  submittedAt   DateTime @default(now())
}